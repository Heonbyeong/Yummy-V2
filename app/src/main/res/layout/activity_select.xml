<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.example.yummy_v2.ui.home.SelectActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.SelectActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:onClick="@{() -> activity.finish()}"
                android:src="@drawable/ic_back"
                android:background="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_picker_title"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_noto_sans_kr"
                android:layout_gravity="center"/>

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.gms.maps.MapView
            android:id="@+id/google_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/addr1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대전광역시 유성구 가정북로 76\n대덕소프트웨어마이스터고등학교"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/addr2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장동 23-9 대덕소프트웨어마이스터고등학교"
                android:textSize="14sp"
                android:textColor="@color/hint"/>
            
            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/btn_border"
                android:text="@string/place_picker_confirm"
                android:textColor="@color/white"
                android:fontFamily="@font/font_noto_sans_kr"
                android:theme="@style/ripple"/>

        </LinearLayout>

    </LinearLayout>

</layout>

